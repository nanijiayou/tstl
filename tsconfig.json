{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "lib": [
      "ESNext",
      "ES5",
      "ES2015.Promise"
    ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "noImplicitAny": false,
    "allowJs": false,
    "sourceMap": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationDir": "build/types",
    "outDir": "./build",
    "baseUrl": ".",
    "paths": {
      "@container/*": ["src/container/*"],
      "@adapter/*": ["src/adapter/*"],
      "@iterator/*": ["src/iterator/*"],
      "@fanctor/*": ["src/functor/*"],
      "@algorithm/*": ["src/algorithm/*"],
      "@utils/*": ["src/utils/*"],
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ],
}
