{
  "compilerOptions": {
    "target": "ES6",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "ES5", "ES2015.Promise"],
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmit": false,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "allowJs": true,
    "declaration": true,
    "declarationDir": "./types",
    "outDir": "build",
    "baseUrl":".",
    "paths": {"@/*": ["src/*"]}
  },
  "include": ["src/**/*.ts", "src/**/*.js", "src/**/*.d.ts", "src/**/*.vue"],
  "exclude": ["node_modules", "dist"],
  "typedocOptions": {
    "entryPoints": ["./src/index.ts", "./src/type.ts"],
    "out": "docs/adapter"
  }
}
